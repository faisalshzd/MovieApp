<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_nav_graph"
    app:startDestination="@id/loginOrSignupFragment">

    <fragment
        android:id="@+id/loginOrSignupFragment"
        android:name="com.example.movieapp.Login_Signup_Screeens.Login.LoginOrSignupFragment"
        android:label="Login or Signup">

        <!-- Action to Login -->
        <action
            android:id="@+id/action_loginOrSignupFragment_to_loginScreenFragment"
            app:destination="@id/loginScreenFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>

        <!-- Action to Signup -->
        <action
            android:id="@+id/action_loginOrSignupFragment_to_signupScreenFragment"
            app:destination="@id/signupScreenFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>

    <fragment
        android:id="@+id/loginScreenFragment"
        android:name="com.example.movieapp.Login_Signup_Screeens.Login.LoginScreenFragment"
        android:label="Login" />

    <fragment
        android:id="@+id/signupScreenFragment"
        android:name="com.example.movieapp.Login_Signup_Screeens.Login.SignupScreenFragment"
        android:label="Signup" />
</navigation>
